<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NilaiActivity">

    <LinearLayout
        android:id="@+id/ll_semester2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:background="@drawable/bg_shape3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester 2"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/mtk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematika"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/mtk1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kimia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kimia"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/kimia1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pkn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendidikan Kewarganegaraan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="85"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/pkn1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_semester3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="16dp"
        android:background="@drawable/bg_shape3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester 3"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/mtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematika"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/mtk"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kimia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kimia"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/kimia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pkn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendidikan Kewarganegaraan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="85"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/pkn"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_semester4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="16dp"
        android:background="@drawable/bg_shape3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester 4"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/mtk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematika"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/mtk"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kimia3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kimia"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/kimia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pkn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendidikan Kewarganegaraan"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="85"
                android:gravity="end"
                app:layout_constraintRight_toRightOf="@+id/pkn"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>