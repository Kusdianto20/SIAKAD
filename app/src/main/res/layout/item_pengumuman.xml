<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/bg_shape3"
    android:paddingBottom="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_pengumuman"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:ignore="MissingConstraints"
        android:src="@color/white"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray" />

    <TextView
        android:id="@+id/tv_nama_pengumuman"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:text="Ujian Tengah Semester"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.448"
        app:layout_constraintBottom_toTopOf="@+id/tv_deskripsi_pengumuman"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_pengumuman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_deskripsi_pengumuman"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Deskripsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_pengumuman"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_pengumuman"
        app:layout_constraintHorizontal_bias="0.0"
        android:alpha="0.8"/>
</androidx.constraintlayout.widget.ConstraintLayout>